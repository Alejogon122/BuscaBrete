<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuscaBrete</title>
    <link rel="stylesheet" href="~/css/neumorphism.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuscaBrete.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BuscaBrete</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Postulante"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="postulanteMenu"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Postulante
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="postulanteMenu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="PerfilPostulantes" asp-action="Create">Crear Perfil</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Postulacions" asp-action="Index">Mis Aplicaciones</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Empresa"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="empresaMenu"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Empresa
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="empresaMenu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Ofertas" asp-action="Create">Crear Oferta</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Ofertas" asp-action="Index">Mis Ofertas</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        @using Microsoft.AspNetCore.Identity
                        @inject UserManager<BuscaBrete.Models.ApplicationUser> UserManager

                        @if (User.Identity.IsAuthenticated)
                        {
                            var currentUser = await UserManager.GetUserAsync(User);

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">
                                    Hola, @(currentUser.NombreEmpresa ?? currentUser.NombreCompleto ?? currentUser.Email)
                                </a>
                            </li>

                            <li class="nav-item">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Cerrar sesión</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BuscaBrete - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
