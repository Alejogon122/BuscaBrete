@model IEnumerable<BuscaBrete.Models.Postulacion>

@{
    ViewData["Title"] = "Postulaciones";
}

<h1>Postulaciones</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Open" method="post">
    @Html.AntiForgeryToken()
    <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Oferta</th>
                <th>Postulante</th>
                <th>Mensaje</th>
                <th>Fecha</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="radio" name="selectedId" value="@item.Id" />
                </td>
                <td>@item.Oferta?.Titulo</td>
                <td>@item.Postulante?.UserName</td>
                <td>@Html.Raw(item.Mensaje?.Length > 200 ? item.Mensaje.Substring(0,200) + "..." : item.Mensaje)</td>
                <td>@item.FechaPostulacion.ToString("g")</td>
                <td>@item.Estado</td>
            </tr>
        }
        </tbody>
    </table>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Abrir seleccionada</button>
        <a asp-action="Create" class="btn btn-success">Crear nueva postulación</a>
    </div>
</form>
